{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./static/js/dist",
        "rootDir": "./static/js",
        "sourceMap": true,
        "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost"]
    },
    "include": ["static/js/**/*"],
    "exclude": ["node_modules"]
} 
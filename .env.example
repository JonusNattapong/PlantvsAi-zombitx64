# สภาพแวดล้อมการทำงาน
FLASK_APP=app.py
FLASK_ENV=development
DEBUG=True
PORT=5000

# ข้อมูลโปรเจค
PROJECT_NAME=Tictactoe-zombitx64
VERSION=2.0.0

# ตัวเลือกสำหรับ AI
AI_DIFFICULTY=3  # 1=Easy, 2=Medium, 3=Hard (ZomPokerX64)
USE_ML_MODEL=True
ML_MODEL_PATH=./models/zompokerx64_model.h5

# การตั้งค่าความลับ (SECRET SETTINGS)
SECRET_KEY=change_this_to_a_secure_random_string
SESSION_TYPE=filesystem
SESSION_PERMANENT=False
SESSION_USE_SIGNER=True

